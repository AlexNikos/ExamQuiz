<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/singleTrueFalseCheck"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/singleTrueFalseQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/checkBox1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:maxLines="4"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:minTextSize="10sp" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/optionA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/singleTrueFalseQuestion"
            android:layout_below="@+id/checkBox1"
            android:layout_marginTop="15dp"
            android:text="TRUE" />

        <TextView
            android:id="@+id/optionB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/optionA"
            android:layout_below="@+id/optionA"
            android:layout_marginTop="10dp"
            android:text="FALSE" />

    </RelativeLayout>
</android.support.v7.widget.CardView>