<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/singleTrueFalseCheck"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/singleTrueFalseQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/checkBox1"
            android:layout_marginStart="14dp"
            android:text="TextView" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp" />

        <TextView
            android:id="@+id/qqq1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/singleTrueFalseQuestion"
            android:layout_below="@+id/singleTrueFalseQuestion"
            android:layout_marginTop="46dp"
            android:text="TRUE" />

        <TextView
            android:id="@+id/qqq2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/qqq1"
            android:layout_below="@+id/qqq1"
            android:layout_marginTop="26dp"
            android:text="FALSE" />

    </RelativeLayout>
</android.support.v7.widget.CardView>