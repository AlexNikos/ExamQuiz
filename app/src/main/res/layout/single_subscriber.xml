<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_sub"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/sesarchName"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/imageView5"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="20sp"
            app:minTextSize="14sp" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/sesarchName"
            android:layout_marginBottom="12dp"
            android:text="Suscribed on " />

        <TextView
            android:id="@+id/subDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView41"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/textView41"
            android:text="Date" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="86dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            app:srcCompat="@drawable/ic_person_black_24dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>