<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/tools"
    android:id="@+id/single_multiple"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    android:layout_margin="2dp"
    android:background="@color/cardview_light_background"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">


        <me.grantland.widget.AutofitTextView
            android:id="@+id/single_multiple_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:maxLines="3"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="TextView of Question"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:minTextSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/single_multiple_question"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight=".50"
            android:orientation="vertical">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/single_optionA"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="fill"
                android:layout_weight=".50"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="TextView"
                android:textSize="15sp"
                app:minTextSize="6sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/single_optionB"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".50"
                android:gravity="center"
                android:maxLines="1"
                android:text="TextView"
                android:textSize="15sp"
                app:minTextSize="6sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/single_optionC"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".50"
                android:gravity="center"
                android:maxLines="1"
                android:text="TextView"
                android:textSize="15sp"
                app:minTextSize="6sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/single_optionD"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".50"
                android:gravity="center"
                android:maxLines="1"
                android:text="TextView"
                android:textSize="15sp"
                app:minTextSize="6sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>