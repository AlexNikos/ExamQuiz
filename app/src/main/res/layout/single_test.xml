<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/singleTestView"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/single_row"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/singleTestTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textSize="21sp" />

        <LinearLayout
            android:id="@+id/startLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/singleTestTitle"
            android:layout_below="@id/singleTestTitle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="28"
                android:text="Start:  "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/startTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="72"
                android:text="0000/00/00/ 00:00"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/endLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/singleTestTitle"
            android:layout_below="@+id/startLinear"
            android:layout_marginTop="-2dp"
            android:background="@color/single_row"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="28"
                android:text="End:    " />

            <TextView
                android:id="@+id/endTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="72"
                android:text="0000/00/00/ 00:00"
                android:textSize="12sp" />
        </LinearLayout>


        <Button
            android:id="@+id/activeTestButton"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/active_background" />

        <CheckBox
            android:id="@+id/participation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/optionsButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>