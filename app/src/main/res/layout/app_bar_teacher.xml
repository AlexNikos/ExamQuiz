<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alnik.examquiz.Teacher.TeacherActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@drawable/bar_background"
        android:theme="@style/AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@android:color/transparent"
            app:popupTheme="@style/PopupOverlay" />

        <android.support.design.widget.TabLayout
            android:id="@+id/teacherTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:tabIndicatorColor="@android:color/black"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@android:color/black"
            app:tabTextAppearance="@style/CustomTabText">

            <android.support.design.widget.TabItem
                android:id="@+id/lessonsTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lessons" />

            <android.support.design.widget.TabItem
                android:id="@+id/roomsTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rooms" />

        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/teacherViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appbarTeacher" />

</RelativeLayout>
