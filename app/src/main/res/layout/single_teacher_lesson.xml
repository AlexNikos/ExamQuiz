<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/singleRowLesson"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:theme="@style/CardView"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/teacherLessonView"
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/teacherLessonOptionsButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:background="@android:color/transparent"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/subsText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/teacherLessonView"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingStart="20dp"
            android:text="Subscribers:  "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/subs"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/teacherLessonView"
            android:layout_toEndOf="@+id/subsText"
            android:layout_toStartOf="@+id/teacherLessonOptionsButton"
            android:background="@android:color/transparent"
            android:gravity="left|center"
            android:text="TextView"
            android:textSize="15sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>