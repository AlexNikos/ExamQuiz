<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_trueFalse"
    android:layout_width="190dp"
    android:layout_height="160dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/single_trueFalse_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/single_optionTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/single_trueFalse_question"
            android:layout_marginStart="52dp"
            android:layout_marginTop="23dp"
            android:text="TRUE"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/single_optionFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/single_optionTrue"
            android:layout_below="@+id/single_optionTrue"
            android:layout_marginTop="30dp"
            android:text="FALSE"
            android:textSize="15sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>