<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/singleCheck"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/qqq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox"
        android:layout_marginStart="14dp"
        android:text="TextView" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/qqq1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/qqq"
        android:layout_below="@+id/qqq"
        android:layout_marginTop="46dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/qqq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/qqq1"
        android:layout_below="@+id/qqq1"
        android:layout_marginTop="26dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/qqq3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/qqq2"
        android:layout_below="@+id/qqq2"
        android:layout_marginTop="19dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/qqq4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/qqq3"
        android:layout_below="@+id/qqq3"
        android:layout_marginTop="21dp"
        android:text="TextView" />

</RelativeLayout>
</android.support.v7.widget.CardView>