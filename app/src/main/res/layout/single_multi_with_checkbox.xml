<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/singleCheck"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:maxLines="4"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            app:minTextSize="10sp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/optionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/question"
            android:layout_below="@+id/question"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:maxLines="2"
            android:text="TextView"
            android:textSize="15sp"
            app:minTextSize="10sp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/optionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/optionA"
            android:layout_below="@+id/optionA"
            android:layout_marginRight="30dp"
            android:layout_marginTop="26dp"
            android:text="TextView"
            android:textSize="15sp"
            android:maxLines="2"
            app:minTextSize="10sp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/optionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/optionB"
            android:layout_below="@+id/optionB"
            android:layout_marginRight="30dp"
            android:layout_marginTop="19dp"
            android:text="TextView"
            android:textSize="15sp"
            android:maxLines="2"
            app:minTextSize="10sp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/optionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/optionC"
            android:layout_below="@+id/optionC"
            android:layout_marginRight="30dp"
            android:layout_marginTop="21dp"
            android:text="TextView"
            android:textSize="15sp"
            android:maxLines="2"
            app:minTextSize="10sp"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>